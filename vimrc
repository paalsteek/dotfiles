syntax enable
set background=dark
colorscheme solarized
"show line numbers
set number
"fold code blocks
set foldmethod=syntax
"some search ajustments
"search while typing
set incsearch
set ignorecase
"don't ignore case when searchng upper case
set smartcase

set autoindent
set smartindent

"disable the visual bell
set vb t_vb=

"small tabs
set tabstop=2
"indent with 2 spaces
set shiftwidth=2

set cursorline

"highlight all matches when searching
set hlsearch

"show whitespaces
set list
set listchars=tab:»·,trail:·

"save file on :make
set autowrite

let g:solarized_contrast="high"    "default value is normal
let g:solarized_visibility="high"    "default value is normal
let g:solarized_hitrail=1    "default value is 0

